html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    title Aplicacion de carga de Productos

  body(class="px-5 mx-5 container")
    div(class="bg-success")
    header(class="text-center")
      h1(class="text-primary font-weight-bold") Aplicacion de Carga de Productos
    
    h3(class="text-primary") Ingrese Datos
    div(class="container")
      form(action="/api/productos" method="post")
        div(class="form-group")
          label(for="title" class="font-italic") Nombre del producto
          input(type="text" class="form-control" name="title" id="title" placeholder="Nombre del producto")
        div(class="form-group")
          label(for="price") Precio del Producto
          input(type="text" class="form-control" name="price" id="price" placeholder="Precio del producto")
        div(class="form-group")
          label(for="thumbnail") Icono del Producto
          input(type="text" class="form-control" name="thumbnail" id="thumbnail" placeholder="Icono del producto")
        input(type="hidden" name="form" value="1" )
        button(type="submit" class="btn btn-primary") Submit
  
    footer(class="text-center" style="padding-top: 10px;")
