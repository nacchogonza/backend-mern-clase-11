html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    title Aplicacion de carga de Productos

  body(class="px-5 mx-5 container")
    div(class="bg-success")
    header(class="text-center")
      h1(class="text-primary font-weight-bold") Aplicacion de Carga de Productos
    
    h3(class="text-primary") Vista de Productos
    
    if products.length
      div(class="container")
        table(class="table")
          thead
            tr
              th(scope="col") Title
              th(scope="col") Price
              th(scope="col") Foto

          tbody(class="align-middle")
            each product in products
              tr
                td(style="vertical-align: middle;")= product.title
                td(style="vertical-align: middle;")= `$ ${product.price}`
                td(class="w-25")
                  img(src=product.thumbnail style="width: 50px;")

    else
      div(class="container")
        div(class="container bg-warning pb-5")
          h3 No se encontraron productos cargados

    footer(class="text-center" style="padding-top: 10px;")
      p Backend MERN - Entregable Clase 11 - PUG


    