<%- include('../partials/top') %>
  <h3 class="text-primary">Vista de Productos</h1>
  <% if (products.length) { %>
  <div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Foto</th>
      </tr>
    </thead>
    <tbody class="align-middle">
      <% products.forEach(function(product) { %>
      <tr>
        <td style="vertical-align: middle;"><%= product.title %></td>
        <td style="vertical-align: middle;">$ <%= product.price %></td>
        <td class="w-25">
          <img src="<%= product.thumbnail %>" style="width: 50px;" />
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
  <% } else { %>
  <div class="container">
    <div class="container bg-warning pb-5">
      <h3>No se encontraron productos cargados</h1>
    </div>
  </div>
  <% } %>

  <%- include('../partials/bottom') %>